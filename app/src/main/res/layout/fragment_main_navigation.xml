<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_navigation_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳转到NavifationFragmentOne"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_navigation_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳转到NavifationFragmentTwo"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_navigation_one" />

    <Button
        android:id="@+id/btn_navigation_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳转到NavifationFragmentThree"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_navigation_two" />


</androidx.constraintlayout.widget.ConstraintLayout>